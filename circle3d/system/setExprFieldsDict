FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setExprFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volVectorFieldValue U (0 0 0)
);

expressions
(
    U
    {
        field       U;
        dimensions  [0 1 -1 0 0 0 0];

        constants
        {
            centre (0 0 1.0);
        }

        

        fieldMask
        #{
             (mag(pos() - $[(vector)constants.centre]) < 0.42)
        #};

        expression
        #{
            1801/0.42 * ( vector( pos().x() , pos().y() , pos().z() - 1.0))  
        #};
    }
);

    

